    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Authentication.PhoneSignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity
            android:name=".SetProfile"
            android:parentActivityName=".Main2Activity" />
        <activity
            android:name=".AddContact"
            android:parentActivityName=".Main2Activity" />
        <activity android:name=".UsersProfileActivity" />
        <activity android:name=".GroupsPackage.GroupChat" />
        <activity android:name=".Authentication.SignUp" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".Settings" />
        <activity android:name=".GroupsPackage.GroupMemberSelection" />
        <activity android:name=".GroupsPackage.GroupSettings" />
        <activity android:name=".GroupsPackage.DeleteGroupMembers" />
        <activity android:name=".GroupsPackage.AddGroupMembers" />
        <activity android:name=".GroupsPackage.GroupSettingsAdvance" />
    </application>

</manifest>